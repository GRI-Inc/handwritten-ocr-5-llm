{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": ["src/**/*", "vision-module/src/**/*"],
  "exclude": ["node_modules", "dist"]
}